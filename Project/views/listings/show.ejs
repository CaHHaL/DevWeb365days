<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title%></h3>
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image%>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text">
        <i>Owned by <%= listing.owner.username%></i>
        <br /><%= listing.description%> <br />
        &#8377;<%= listing.price.toLocaleString("en-IN") %>
        <br /><%= listing.location%> <br /><%= listing.country%>
      </p>
    </div>
  </div>

  <br />
  <%if(currUser){%>
  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-3 add-btn show-btn"
      >Edit</a
    >
    <br /><br />
    <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>
  <%}%>

  <div class="col-8 offset-3">
    
    <% if(currUser){%>
      <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing.id%>/reviews" method="post" novalidate class="needs-validation">
      <div class="mb-2 mt-2">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"/>
      </div>
      <div class="mb-2 mt-2">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comments]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments</div>
      </div>

      <button class="btn btn-outline-dark mt-2">Submit</button>
      <%}%>
    </form>
    
    <hr>
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews) {%>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= review.author.username %></h5>
            <p class="card-text"><%= review.comments%></p>
            <p class="card-text"><%= review.rating %> stars</p>
          </div>
          <form action="/listings/<%= listing._id%>/reviews/<%=review._id%>?_method=DELETE" class="mb-3 mt-3" method="post">
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
    
        </div>
        <%}%>
    </div>
 


  </div>
</div>

<!-- variable_name.toLocaleString("en-IN") use for the mentioning the commas in the price as per country standard -->
